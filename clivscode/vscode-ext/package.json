{
  "name": "tecspacs-vscode-ext",
  "displayName": "Tecspacs",
  "version": "0.0.1",
  "description": "VSCode Extension for tecspacs - Manage your code snippets and packages",
  "license": "MIT",
  "author": "rtrevizo18",
  "publisher": "rtrevizo18",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "keywords": [
    "vscode",
    "snippets",
    "packages",
    "code-management"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onView:tecspacsExplorer",
    "onCommand:tecspacs.getSnippet",
    "onCommand:tecspacs.createSnippet",
    "onCommand:tecspacs.login",
    "onCommand:tecspacs.logout",
    "onCommand:tecspacs.whoami",
    "onCommand:tecspacs.getPackage",
    "onCommand:tecspacs.createPackage",
    "onCommand:tecspacs.listSnippets",
    "onCommand:tecspacs.listPackages",
    "onCommand:tecspacs.refresh",
    "onCommand:tecspacs.insertSnippet",
    "onCommand:tecspacs.viewPackage",
    "onCommand:tecspacs.updateStatusBar",
    "onCommand:tecspacs.browseSnippets",
    "onCommand:tecspacs.browsePackages",
    "onCommand:tecspacs.showAllSnippets"
  ],
  "contributes": {
    "commands": [
      {
        "command": "tecspacs.getSnippet",
        "title": "Get Snippet",
        "category": "Tecspacs"
      },
      {
        "command": "tecspacs.createSnippet",
        "title": "Create Snippet",
        "category": "Tecspacs"
      },
      {
        "command": "tecspacs.login",
        "title": "Login",
        "category": "Tecspacs"
      },
      {
        "command": "tecspacs.logout",
        "title": "Logout",
        "category": "Tecspacs"
      },
      {
        "command": "tecspacs.whoami",
        "title": "Show Profile",
        "category": "Tecspacs"
      },
      {
        "command": "tecspacs.getPackage",
        "title": "Get Package",
        "category": "Tecspacs"
      },
      {
        "command": "tecspacs.createPackage",
        "title": "Create Package",
        "category": "Tecspacs"
      },
      {
        "command": "tecspacs.listSnippets",
        "title": "List All Snippets",
        "category": "Tecspacs"
      },
      {
        "command": "tecspacs.listPackages",
        "title": "List All Packages",
        "category": "Tecspacs"
      },
      {
        "command": "tecspacs.copyCode",
        "title": "Copy Auth Code",
        "category": "Tecspacs"
      },
      {
        "command": "tecspacs.refresh",
        "title": "Refresh",
        "category": "Tecspacs"
      },
      {
        "command": "tecspacs.insertSnippet",
        "title": "Insert Snippet",
        "category": "Tecspacs"
      },
      {
        "command": "tecspacs.viewPackage",
        "title": "View Package",
        "category": "Tecspacs"
      },
      {
        "command": "tecspacs.browseSnippets",
        "title": "Browse Web Snippets",
        "category": "Tecspacs"
      },
      {
        "command": "tecspacs.browsePackages",
        "title": "Browse Web Packages",
        "category": "Tecspacs"
      },
      {
        "command": "tecspacs.showAllSnippets",
        "title": "Show All Snippets (Debug)",
        "category": "Tecspacs"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tecspacs",
          "title": "Tecspacs",
          "icon": "$(code)"
        }
      ]
    },
    "views": {
      "tecspacs": [
        {
          "id": "tecspacsExplorer",
          "name": "Explorer",
          "when": "true"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "tecspacs.getSnippet",
          "when": "true"
        },
        {
          "command": "tecspacs.createSnippet",
          "when": "true"
        },
        {
          "command": "tecspacs.login",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "axios": "^1.11.0",
    "better-sqlite3": "^12.2.0",
    "clipboardy": "^4.0.0",
    "dotenv": "^17.2.1",
    "env-paths": "^3.0.0",
    "jwt-decode": "^4.0.0",
    "open": "^10.2.0",
    "openid-client": "^6.6.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^9.32.0",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0"
  }
}
